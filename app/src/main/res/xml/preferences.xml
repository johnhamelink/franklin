<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <CheckBoxPreference
      android:key="activateNag"
      android:title="Recurring pauses"
      android:defaultValue="False"/>
  <EditTextPreference
      android:key="nagTime"
      android:title="nagTime"
      android:defaultValue="600"
      android:dependency="activateNag"/>
  <!-- sub if True: duration -->
  <CheckBoxPreference
      android:key="activateReminder"
      android:title="Reminder of goals"
      android:defaultValue="False"/>
  <CheckBoxPreference
      android:key="solar"
      android:title="Solar time"
      android:defaultValue="False"/>
  <!-- sub if True: position -->
</PreferenceScreen>
