<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="onion.logplusbmixd5zjl">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Timer">
        </activity>

        <!-- main activity should have common.init() to update db -->
        <activity
            android:name=".Check"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Count"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EditCount"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EditLog"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".EditTimer"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Logs"
            android:label="@string/app_name">
        </activity>
        <!-- td: remove before release -->
        <activity
            android:name=".Settings"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Nag"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".Wakeup"
            android:label="@string/app_name">
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:exported="false"
            android:label="alarmreceiver">
            <intent-filter>
                <action android:name="my.nag"/>
            </intent-filter>
            <intent-filter>
                <action android:name="my.timer"/>
            </intent-filter>
            <intent-filter>
                <action android:name="my.minder"/>
            </intent-filter>
            <intent-filter>
                <action android:name="my.alarm"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
